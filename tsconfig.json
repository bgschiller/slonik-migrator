{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    // Skipping lib check because zod is throwing a "Return type annotation circularly references itself." error
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
